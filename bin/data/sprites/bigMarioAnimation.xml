<?xml version="1.0" encoding="UTF-8"?>
<!--Format:
name   => name of the animation sequence
start  => starting frame
end    => ending frame
loop   => looping animation (default)
-->
<animation name="bigMario">
    <sequence name="standing"  start="0" end="0" loop="false" />
    <sequence name="walk"  start="1" end="2" loop="true" />
    <sequence name="jump"  start="3" end="3" loop="false" />
    <sequence name="fall"  start="4" end="4" loop="false" />
    <sequence name="slide" start="5" end="5" loop="false" />
    <sequence name="run"   start="6" end="8" loop="true" />
    <sequence name="jump-running" start="9" end="9" loop="false" />
</animation>
