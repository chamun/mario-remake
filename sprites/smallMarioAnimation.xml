<?xml version="1.0" encoding="UTF-8"?>
<!--Format:
name   => name of the animation sequence
start  => starting frame
end    => ending frame
loop   => looping animation (default)
-->
<animation name="smallMario">
    <sequence name="standing"  start="1" end="1" loop="false" />
    <sequence name="walk"  start="0" end="1" loop="true" />
    <sequence name="jump"  start="2" end="2" loop="false" />
    <sequence name="fall"  start="3" end="3" loop="false" />
    <sequence name="slide" start="4" end="4" loop="false" />
    <sequence name="run"   start="5" end="6" loop="true" />
    <sequence name="jump-running" start="7" end="7" loop="false" />
</animation>
